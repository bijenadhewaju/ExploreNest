    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <h1 class="hero-title">Adventure Awaits in Pokhara</h1>
            <p class="lead">Experience thrilling activities in Nepal's adventure capital</p>
        </div>
